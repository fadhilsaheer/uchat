model User {
  id       Int    @id @unique @default(autoincrement())
  email    String @unique
  name     String
  profile  String
  password String
  rooms    Room[]
}

model Room {
  id          Int     @id @unique @default(autoincrement())
  roomId      String  @unique
  title       String
  description String
  isPrivate   Boolean
  creator     User    @relation(fields: [creatorId], references: [id])
  creatorId   Int
}
